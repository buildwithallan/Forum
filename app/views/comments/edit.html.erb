<h1>Edit Comment</h1>

<div>
	<div class="col-md-8">
		<%= form_for ([@message, @comment]) do |f| %>

		<div class="form-group">
			<%= f.label :content %>
	        <%= f.text_area :content, class: 'form-control' %>
		</div>

	   <%= f.submit "Post", class: 'btn btn-primary' %>
       <% end %>
	</div>
</div>

